<% single_post[0].each do |media| %>
    <p>Media</p>
    <% media.each do |file| %>
    <div class="media">
    <%= file.lokasi %>
    </div>
    <br/>
    <% end %>
<% end %>
<p>Post</p>
<% single_post[1].each do |data| %>
<table border="1">
    <thead>
        <th>id</th>
        <th>id_member</th>
        <th>id_parent_post</th>
        <th>text</th>
        <th>waktu</th>
        <th>aksi</th>
    </thead>
    <tbody>
    <tr>
        <td><%= data.id %></td>
        <td><%= data.id_member %></td>
        <td><%= data.id_parent_post %></td>
        <td><%= data.text %></td>
        <td><%= data.waktu %></td>
        <td><a href="/post/<%= data.id %>" title="Post <%= data.id %>">Show</a></td>
    </tr>
    </tbody>
</table>
<% end %>
